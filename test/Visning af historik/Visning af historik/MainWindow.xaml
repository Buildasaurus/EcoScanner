<Window x:Class="Visning_af_historik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Visning_af_historik"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

        <TextBlock Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25">
                Bennys bukser brændte
        </TextBlock>
        <StackPanel x:Name="Chartdata" Grid.Row="1" HorizontalAlignment="Center" Orientation="Horizontal">
            <Rectangle Height="100" Width="50" Fill="Blue" Margin="5,0" VerticalAlignment="Bottom"/>
            <Rectangle Height="50" Width="50" Fill="Blue" Margin="5,0" VerticalAlignment="Bottom"/>
            <TextBlock FontSize="25" Text="Today - 64° F "/>
            <TextBlock FontSize="25" Text="Partially Cloudy "/>
        </StackPanel>
        <Button Grid.Row="1" HorizontalAlignment="Left">
            Hello
        </Button>
        </Grid>
</Window>
