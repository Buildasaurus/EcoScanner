<?xml version="1.0" encoding="utf-8"?>
<popup:PopupPage
xmlns="http://xamarin.com/schemas/2014/forms"
xmlns:popup="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
x:Class="MyNamespace.MyPopup">
    <StackLayout >
        <Label Text="Pop Up Demo" HorizontalOptions="Center" Margin="20"/>
        <Label Text = "This is a popup!" TextColor = "Color.Green" />
        <Image  Source = "a.jpg" Margin = "30" Opacity = "0.5"/>
        <Button Clicked="Close_Click" x:Name="Close" Text = "Close" BackgroundColor = "Color.Red" TextColor = "Color.Black"/>
    </StackLayout>
</popup:PopupPage>